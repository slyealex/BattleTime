<div class="container">
  <h1>Log In</h1>

  <%= form_tag sessions_path do %>

    <div class="form-field">
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email] %>
    </div>

    <div class="form-field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div class="form-field">
      <%= submit_tag 'Log In' %>
    </div>

  <% end %>
</div>
