<div class="container">
  <h1><%= @store.name.capitalize %></h1>
  <h3><%= @store.address %></h3>
  <h3><%= @store.email %></h3>
</div>

<div class="container">
  <h1>All Events</h1>

  <% @store.events.each do |event| %>
    <div class="event-container">
      <h6><%= event.name %></h6>
      <p><%= event.time %></p>
      <p><%= event.description %></p>
      <%= link_to 'Delete', [@store, event], method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>

</div>

<div class="container">
  <h1>Add Event</h1>

  <div class="col-md-4">
    <%= bootstrap_form_for([@store, @event]) do |f| %>
      <%= f.text_field :name %>
      <%= f.datetime_select :time %>
      <%= f.text_area :description %>
      <%= f.submit 'Add Event', class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
